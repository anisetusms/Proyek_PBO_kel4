<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="620.0" stylesheets="@style4.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kel4.AdminPembayaranController">
    <children>
        <!-- Label untuk Judul -->
        <Label layoutX="20.0" layoutY="20.0" text="Manajemen Pembayaran" styleClass="title" />

        <!-- TableView untuk Menampilkan Data Pembayaran -->
        <TableView fx:id="tableViewPembayaran" layoutX="20.0" layoutY="60.0" prefHeight="200.0" prefWidth="580.0">
            <columns>
                <TableColumn fx:id="columnId" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="columnBookingId" prefWidth="100.0" text="Booking ID" />
                <TableColumn fx:id="columnJumlahBayar" prefWidth="100.0" text="Jumlah Bayar" />
                <TableColumn fx:id="columnTanggalPembayaran" prefWidth="150.0" text="Tanggal Pembayaran" />
                <TableColumn fx:id="columnStatusPembayaran" prefWidth="100.0" text="Status" />
            </columns>
        </TableView>

        <!-- ComboBox untuk Mengubah Status -->
        <Label layoutX="20.0" layoutY="280.0" text="Ubah Status Pembayaran:" />
        <ComboBox fx:id="statusPembayaranCombo" layoutX="180.0" layoutY="275.0" prefWidth="150.0" />

        <!-- Tombol Proses Pembayaran -->
        <Button layoutX="350.0" layoutY="275.0" onAction="#handleProsesPembayaran" text="Proses" />

        <!-- Tombol Kembali -->
        <Button fx:id="btnKembali" layoutX="480.0" layoutY="350.0" mnemonicParsing="false" onAction="#handleKembali" prefHeight="40.0" prefWidth="120.0" styleClass="button" text="Kembali" />
    </children>
</AnchorPane>
