<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="551.0" prefWidth="834.0" stylesheets="@style4.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kel4.DaftarLapanganController">
   <children>
      <!-- Main Container -->
      <VBox alignment="CENTER" layoutX="125.0" layoutY="50.0" prefHeight="500.0" prefWidth="600.0" spacing="30.0">
         <children>
            <!-- Header Label -->
            <Label styleClass="header-label" text="Daftar Lapangan" />

            <!-- TableView for Listing -->
            <TableView fx:id="tableView" prefHeight="350.0" prefWidth="657.0" styleClass="table-view">
               <columns>
                  <TableColumn fx:id="colNamaLapangan" prefWidth="250.0" text="Nama Lapangan" />
                  <TableColumn fx:id="colHarga" prefWidth="175.0" text="Harga" />
                  <TableColumn fx:id="colStatus" prefWidth="175.0" text="Status" />
               </columns>
            </TableView>

            <!-- Button Container -->
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Button fx:id="btnKembali" onAction="#handleKembali" prefWidth="150.0" styleClass="back-button" text="Kembali" />
                  <Button fx:id="btnBookingLapangan" onAction="#handleBookingLapanganClick" prefWidth="150.0" styleClass="book-button" text="Booking" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
