<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="550.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kel4.MenuUserController">
   <children>
        <!-- Label untuk judul -->
        <Label text="NUMERO SADA FUTSAL" textAlignment="CENTER" textFill="#60b478">
            <font>
                <Font name="Bell MT Bold" size="27.0" />
            </font>
        </Label>

                    <!-- Logo Aplikasi -->
        <ImageView fx:id="imageLogo" fitHeight="180.0" fitWidth="140.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/logo.png" />
            </image>
        </ImageView>

                    <!-- Kontainer untuk tombol -->
        <VBox alignment="CENTER" prefHeight="219.0" prefWidth="659.0" spacing="10.0">
            <children>
                  <!-- Tombol Booking Lapangan -->
                  <Button fx:id="btnBookingLapangan" alignment="CENTER" contentDisplay="CENTER" focusTraversable="true" mnemonicParsing="false" onAction="#handleBookingLapanganClick" prefHeight="39.0" prefWidth="473.0" style="-fx-background-color: #60b478;" text="Booking Lapangan" textFill="WHITE" />

                                          <!-- Tombol Data Booking -->
                  <Button fx:id="btnDataBooking" focusTraversable="true" mnemonicParsing="false" onAction="#handleDataBookingClick" prefHeight="39.0" prefWidth="473.0" style="-fx-background-color: #60b478;" text="Data Booking" textFill="WHITE" />

                                          <!-- Tombol Daftar Lapangan -->
                  <Button fx:id="btnDaftarLapangan" focusTraversable="true" mnemonicParsing="false" onAction="#handleDaftarLapanganClick" prefHeight="39.0" prefWidth="473.0" style="-fx-background-color: #60b478;" text="Daftar Lapangan" textFill="WHITE" />

                                          <!-- Tombol Logout -->
                  <Button fx:id="btnLogout" focusTraversable="true" mnemonicParsing="false" onAction="#handleLogout" prefHeight="39.0" prefWidth="473.0" style="-fx-background-color: #60b478;" text="Logout" textFill="WHITE" />
            </children>
        </VBox>
   </children>
</VBox>
