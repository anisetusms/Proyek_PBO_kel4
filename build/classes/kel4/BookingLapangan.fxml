<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="BookingLapangan" prefHeight="523.0" prefWidth="831.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kel4.BookingLapanganController">
    <children>
        <Label layoutX="267.0" layoutY="40.0" text="NUMERO SADA FUTSAL" AnchorPane.topAnchor="40.0">
            <font>
                <Font name="Bell MT Bold" size="30.0" />
            </font>
            <style>
                -fx-text-fill: #2e3b4e; -fx-font-size: 30px; -fx-font-weight: bold;
            </style>
        </Label>

        <GridPane layoutX="100.0" layoutY="130.0" prefHeight="300.0" prefWidth="541.0" vgap="20.0" hgap="20.0" AnchorPane.topAnchor="130.0" AnchorPane.leftAnchor="100.0">
            <Label text="Nama Lapangan">
                <font>
                    <Font name="Bell MT" size="16.0" />
                </font>
            </Label>
            <Label text="Tanggal Booking" GridPane.rowIndex="1">
                <font>
                    <Font name="Bell MT" size="16.0" />
                </font>
            </Label>
            <Label text="Jam Mulai" GridPane.rowIndex="2">
                <font>
                    <Font name="Bell MT" size="16.0" />
                </font>
            </Label>
            <Label text="Jam Selesai" GridPane.rowIndex="3">
                <font>
                    <Font name="Bell MT" size="16.0" />
                </font>
            </Label>

            <ComboBox fx:id="comboLapangan" GridPane.columnIndex="1" promptText="Pilih Lapangan" />
            <DatePicker fx:id="tanggalBooking" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="txtJamMulai" GridPane.columnIndex="1" GridPane.rowIndex="2" promptText="Jam Mulai (HH:MM)" />
            <TextField fx:id="txtJamSelesai" GridPane.columnIndex="1" GridPane.rowIndex="3" promptText="Jam Selesai (HH:MM)" />
        </GridPane>

        <Button fx:id="btnBook" layoutX="350.0" layoutY="380.0" mnemonicParsing="false" onAction="#handleBooking" prefHeight="40.0" prefWidth="120.0" text="Booking" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>

        <Button fx:id="btnKembali" layoutX="706.0" layoutY="470.0" mnemonicParsing="false" onAction="#handleBackToMenu" text="Kembali" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14px;"/>
    </children>
</AnchorPane>
