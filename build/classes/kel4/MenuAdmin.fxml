<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox alignment="CENTER" prefHeight="547.0" prefWidth="594.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kel4.MenuAdminController">
   <children>
      <!-- Logo -->
      <ImageView fx:id="imageLogo" fitHeight="180.0" fitWidth="140.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/logo.png" />
         </image>
      </ImageView>
      
            <!-- Title -->
      <Label text="NUMERO SADA FUTSAL" textFill="#60b478">
         <font>
            <Font name="Bell MT Bold" size="27.0" />
         </font>
      </Label>

            <!-- Buttons Section -->
      <VBox alignment="CENTER" prefHeight="250.0" prefWidth="467.0" spacing="20.0">
         <children>

                  <!-- Buttons -->
            <Button fx:id="btnDaftarBooking" mnemonicParsing="false" onAction="#handleDaftarBookingClick" prefHeight="40.0" prefWidth="473.0" style="-fx-background-color: #60b478;" text="Daftar Booking" textFill="WHITE" />
            <Button fx:id="btnKelolaLapangan" mnemonicParsing="false" onAction="#handleKelolaLapanganClick" prefHeight="40.0" prefWidth="473.0" style="-fx-background-color: #60b478;" text="Kelola Lapangan" textFill="WHITE" />
            <Button fx:id="btnKelolaUser" mnemonicParsing="false" onAction="#handleKelolaUserClick" prefHeight="40.0" prefWidth="473.0" style="-fx-background-color: #60b478;" text="Data User" textFill="WHITE" />
            <Button fx:id="btnLogout" mnemonicParsing="false" onAction="#handleLogout" prefHeight="40.0" prefWidth="473.0" style="-fx-background-color: #60b478;" text="Logout" textFill="WHITE" />
         </children>
      </VBox>
   </children>
</VBox>
